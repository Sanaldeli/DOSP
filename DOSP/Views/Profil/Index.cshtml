@{
    ViewBag.Title = "Profil";
    ViewBag.nav = "profil";
    int oyunSayisi = ViewBag.kutuphane.Count;
    int i = 0;
}

@using DOSP.Models
@model User

@section nav {
    <a>@Model.Nickname</a>
}

@section scripts {
    <script>
        var h1width = $(".container-hasGames>h1").width() + 11;
        $(".container-hasGames>#border").css("width", "calc(100% - " + h1width + "px)");
    </script>
}

<div class="user-header">
    <img class="user-img" src="~/Content/Assets/Images/@Model.ProfilePicture" />
    <h2 id="regdate">@Model.RegistrationDate.ToString("dd MMMM yyyy")</h2>
    <h1 class="username">@Model.Nickname</h1>
    <br />
    <h2 id="realname">@Model.FullName</h2>
</div>

<div class="container-hasGames">
    <h1>@oyunSayisi Oyun Sahibi</h1>
    <div id="border"></div>
</div>
<div class="user-gamelist">
    @foreach (Library l in ViewBag.kutuphane)
    {
        <div class="user-game">
            <img src="~/Content/Assets/Images/gcont/@l.GameID/cover.jpg" />
            <a href="/Magaza/Oyun/@l.GameID">@l.Game.Title</a>
        </div>
        if (++i >= 4)
        {
            <div class="user-limit">
                <h1>+@(oyunSayisi-4) OYUN</h1>
            </div>
            break;
        }
    }
</div>