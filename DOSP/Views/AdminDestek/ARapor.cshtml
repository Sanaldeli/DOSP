
@{
    ViewBag.Title = "Rapor";
    ViewBag.nav = "aPanel";
}

@section nav {
    <a href="/AdminPaneli">Admin Paneli</a>
    <a href="/AdminDestek">Destek</a>
    <a>@ViewBag.Title</a>
}

@using DOSP.Models
@model List<Report>

<table>
    <tr>
        <th>Rapor ID</th>
        <th>Kategori</th>
        <th>Kullanıcı ID</th>
        <th>Rumuz</th>
        <th>Oyun</th>
        <th>Tarih</th>
    </tr>
    @foreach (var r in Model)
    {
        <tr>
            <td><a href="/AdminDestek/ARaporGoruntule/@r.ID">@r.ID</a></td>
            <td>@r.ReportCategory.Name</td>
            <td>@r.UserID</td>
            <td>@r.User.Nickname</td>
            <td>@r.Game.Title</td>
            <td>@r.ReportDate.ToString("dd.MM.yyyy H:mm")</td>
        </tr>
    }
</table>