
@{
    ViewBag.Title = "Rapor Görüntüle";
    ViewBag.nav = "aPanel";
}

@section nav {
    <a href="/AdminPaneli">Admin Paneli</a>
    <a href="/AdminDestek">Destek</a>
    <a>@ViewBag.Title</a>
}

@model DOSP.Models.Report

<ul style="list-style: none;">
    <li>Rapor ID: @Model.ID</li>
    <li>Kullanıcı: @Model.User.Nickname</li>
    <li>Tarihi: @Model.ReportDate.ToString("dd.MM.yyyy H:mm")</li>
    <li>Oyun: <a href="/Magaza/Oyun/@Model.GameID">@Model.Game.Title</a></li>
    <li class="content-border"></li>
    <li>
        Açıklama:
        <br />
        <p style="word-wrap: break-word;">@Model.Description</p>
    </li>
</ul>